<p id="notice"><%= notice %></p>

<h1>Balances</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Product</th>
      <th>User</th>
      <th>Price per unity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.quantity %></td>
        <td><%= balance.product.name %></td>
        <td><%= balance.user.name %></td>
        <td><%= balance.price_per_unity %></td>
        <td><%= link_to 'Show', balance %></td>
        <td><%= link_to 'Edit', edit_balance_path(balance) %></td>
        <td><%= link_to 'Destroy', balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <th colspan="2"></th>
      <th>Total</th>
      <th><%= @total %></th>
      <th colspan="3"></th>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Balance', new_balance_path %>
